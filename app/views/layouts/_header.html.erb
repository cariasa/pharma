<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Pharma App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Principal",   root_path %></li>
        <li><%= link_to "Ayuda",   help_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to "Usuario: #{current_user.email}", "#", :class => 'navbar-link' %></li>
          <li><%= link_to 'Editar Perfil', "/users/#{current_user.id}/edit", :class => 'navbar-link' %> </li>
          <% if current_user.admin? %>
            <li><%= link_to "Usuarios", '/users', :class => 'navbar-link'  %> </li>
          <% end %>
          <li><%= link_to "Salir", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %> </li>
        <% else %>
          <li><%= link_to "Ingresar", new_user_session_path, :class => 'navbar-link'  %> </li>
        <% end %>    
      </ul>
    </nav>
  </div>
</header>
