<p id="notice"><%= notice %></p>

<h1>Listing People</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Fullname</th>
      <th>Address</th>
      <th>Telephone</th>
      <th>Email</th>
      <th>Birthday</th>
      <th>Person ID</th>
      <th>City</th>
      <th>Specialty</th>
      <th>Clinics</th>
      <th>Person Types</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.fullname %></td>
        <td><%= person.address %></td>
        <td><%= person.telephone %></td>
        <td><%= person.email %></td>
        <td><%= person.birthday %></td>
        <td><%= person.idperson %></td>
        <td><%= person.city.city %></td>
        <td><%= person.specialty.specialty %></td>
        <td><%= person.clinics.map{|c| c.clinic}.join(', ')%></td>
        <td><%= person.persontypes.map{|c| c.persontype}.join(', ')%></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

