<p id="notice"><%= notice %></p>

<h1>Listing Substances</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Substance</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @substances.each do |substance| %>
      <tr>
        <td><%= substance.substance %></td>
        <td><%= substance.description %></td>
        <td><%= link_to 'Show', substance %></td>
        <td><%= link_to 'Edit', edit_substance_path(substance) %></td>
        <td><%= link_to 'Destroy', substance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

